<h2>a few random dreams</h2>
<ul class="article__list">
{% set articles = collections.randomdreams | limit(3) %}
{% for article in articles %}
  {% if (loop.index <= 3) %}
  <li class="article__item">
    <article class="article__preview">
      <h2><a href="{{ article.url | url }}">{{ article.data.title }}</a></h2>
      {% markdown %}
      {{ article.data.excerpt }}
      {% endmarkdown %}
      <small>
        <time>{{ article.data.date | readableDate }}</time>
      </small>
    </article>
  </li>
  {% endif %}
{% endfor %}
</ul>
<a href="/dreams">dream diary</a>
